exec &>/var/log/px-deploy/all-master
[ -f /tmp/credentials ] && mkdir /root/.aws && mv /tmp/credentials /root/.aws
mv /tmp/assets /assets
echo 'source <(kubectl completion bash)' >>/root/.bashrc
echo 'alias k=kubectl' >>/root/.bashrc
cat <<EOF >/etc/exports
/ 10.0.0.0/8(rw,no_root_squash)
/ 192.168.0.0/16(rw,no_root_squash)
/ 172.16.0.0/12(rw,no_root_squash)
EOF
systemctl start nfs-server
systemctl enable nfs-server
yum groupinstall 'Development Tools' -y
rpm -Uvh http://www.city-fan.org/ftp/contrib/yum-repo/rhel6/x86_64/city-fan.org-release-2-1.rhel6.noarch.rpm && yum --enablerepo=city-fan.org install libcurl libcurl-devel -y
adduser portworx
passwd --stdin portworx <<<portworx
usermod -aG wheel portworx
rpm -U http://opensource.wandisco.com/centos/7/git/x86_64/wandisco-git-release-7-2.noarch.rpm && yum install -y git
echo 'source <(kubectl completion bash)' >> /home/portworx/.bashrc
echo 'alias k=kubectl' >> /home/portworx/.bashrc
mkdir /home/portworx/.kube
cp -r /root/.kube/config /home/portworx/.kube/config
